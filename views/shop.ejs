<%- include('./layouts/header') %>
<style>

  .shownav {
    left: 0;
    top: 20%;
    clip-path: circle(0% at 0 0);
  }
  .nav2 {
    clip-path: circle(141.4% at 0 0);

    transition: 0.8s all ease-in-out;
  }
  ::-webkit-scrollbar {
    display: none;
  }
  .img {
    background-image: url(/assets/images/shop-background.jpeg);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    backdrop-filter: blur(10px);
  }
  .toggle-filter{
    width:24rem;
  }
  .filter-show{
    transition: all .5s ease-in ;
  }
  .price-filter {
    margin-top: 20px;
  }
  input[type="range"] {
    appearance: none;
    -webkit-appearance: none;
    width: 100%;
    margin: 15px 0;
  }
  input[type="range"]:focus {
    outline: none;
  }
  input[type="range"]::-webkit-slider-runnable-track {
    width: 100%;
    height: 8.4px;
    cursor: pointer;
    background: blue;
    border-radius: 1.3px;
  }
  input[type="range"]::-webkit-slider-thumb {
    border: 1px solid #000000;
    height: 36px;
    width: 16px;
    border-radius: 3px;
    background: #ffffff;
    cursor: pointer;
    -webkit-appearance: none;
    margin-top: -14px;
  }
  input[type="range"]::-moz-range-track {
    width: 100%;
    height: 8.4px;
    cursor: pointer;
    animation: 0.2s;
    background: blue;
    border-radius: 1.3px;
  }
  input[type="range"]::-moz-range-thumb {
    border: 1px solid #000000;
    height: 36px;
    width: 16px;
    border-radius: 3px;
    background: #ffffff;
    cursor: pointer;
  }
  input[type="range"]::-ms-track {
    width: 100%;
    height: 8.4px;
    cursor: pointer;
    background: transparent;
    border-color: transparent;
    color: transparent;
  }
  input[type="range"]::-ms-fill-lower {
    background: blue;
    border-radius: 2.6px;
  }
  input[type="range"]::-ms-fill-upper {
    background: blue;
    border-radius: 2.6px;
  }
  input[type="range"]::-ms-thumb {
    border: 1px solid #000000;
    height: 30px;
    width: 16px;
    border-radius: 3px;
    background: #ffffff;
    cursor: pointer;
    margin-top: 0px;
  }
  input[type="range"]:focus::-ms-fill-lower {
    background: blue;
  }
  input[type="range"]:focus::-ms-fill-upper {
    background: blue;}
    input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  appearance: none;
  -webkit-appearance: none;
  margin: 0;
}
</style>
<div class="bg-gray-950 min-h-screen w-0 right-0 fixed z-[100] filter-show overflow-y-auto">
  <div class="h-[10%] w-full px-7 flex items-center py-5 pb-0">
    <i class="cross ri-close-large-fill text-white text-xl font-semibold p-2 px-3 rounded-full bg-red-500 hover:bg-red-600 cursor-pointer"></i>
  </div>
  <div class="h-[90%] w-full p-5 pt-0">
    <form action="/products/shop/filter" method="get">
      <div class="price-filter">
        <label for="minPrice" class="text-white text-sm font-semibold ">Min Price:</label>
        <input class="w-full py-2 px-3 bg-transparent border-[1px] border-gray-900 outline-none text-white" type="number" id="minPrice" name="minPrice" min="0" max="1000000" step="10">
      </div>
      <div class="price-filter">
        <label for="maxPrice" class="text-white text-sm font-semibold ">Max Price:</label>
        <input class="w-full py-2 px-3 bg-transparent border-[1px] border-gray-900 outline-none text-white" type="number" id="maxPrice" name="maxPrice" min="0" max="1000000" step="10">
      </div>
      
      <div class="category mt-2 p-4 bg-gray-900 rounded-lg text-white">
        <label class="text-white text-lg mb-2 block">Select Category:</label>
        <div class="flex">
          <input type="radio" name="category" id="new" value="New" class="">
          <label for="new" class="p-2 mb-1 rounded-lg cursor-pointer ">New</label>
        </div>
      <div class="flex">
        <input type="radio" name="category" id="Discount" value="Discount" class="">
        <label for="Discount" class="p-2 mb-1 rounded-lg cursor-pointer ">Discount</label>
        </div>
        </div>
        <div class="category mt-5 p-4 bg-gray-900 rounded-lg text-white">
          <div class="flex">
            <input type="radio" name="category" id="Grocery" value="Grocery" class="">
            <label for="Grocery" class="p-2 mb-1 rounded-lg cursor-pointer ">Grocery</label>
          </div>
        <div class="flex">
          <input type="radio" name="category" id="mobile" value="Mobile" class="">
          <label for="mobile" class="p-2 mb-1 rounded-lg cursor-pointer ">Mobile</label>
        </div>
        <div class="flex">
          <input type="radio" name="category" id="boys-wear" value="Boys Wear" class="">
          <label for="boys-wear" class="p-2 mb-1 rounded-lg cursor-pointer ">Boys Wear</label>
        </div>
        <div class="flex">
          <input type="radio" name="category" id="girls-wear" value="Girls Wear" class="">
          <label for="girls-wear" class="p-2 mb-1 rounded-lg cursor-pointer ">Girls Wear</label>
        </div>
        <div class="flex items-center">
          <input type="radio" name="category" id="computers" value="Computers" class="">
          <label for="computers" class="p-2 mb-1 rounded-lg cursor-pointer ">Computers</label>
        </div>
      </div>
    <button type="submit" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 mt-3 px-4 rounded w-full text-center">Filter</button>
     
      
    </form>
</div>

  </div>

<div class="h-screen w-full bg-gray-900 text-white">
  <%- include('./layouts/navbar') %>
