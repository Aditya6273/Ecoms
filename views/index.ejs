<%- include('./layouts/header.ejs') %>
<div class="w-full h-screen bg-gray-900 text-white flex justify-center items-center md:p-0 p-5">

<form autocomplete="off" class="flex justify-center gap-5 relative md:w-1/2 w-full flex-col" action="/register" method="post">
 <h1 class="text-center md:text-5xl text-2xl">Create Account</h1>
    <input class="rounded-md bg-transparent outline-none border-2 border-zinc-800 px-2 py-3 "  type="text" name="name" id="" placeholder="Name">
    <input class="rounded-md bg-transparent outline-none border-2 border-zinc-800 px-2 py-3 "  type="text" name="username" id="" placeholder="Username">
    <input class="rounded-md bg-transparent outline-none border-2 border-zinc-800 px-2 py-3 "  type="email" name="email" id="" placeholder="Email">
    <input class="rounded-md bg-transparent outline-none border-2 border-zinc-800 px-2 py-3 "  type="tel" name="contact" id="" placeholder="Contact">
    <input class="rounded-md bg-transparent outline-none border-2 border-zinc-800 px-2 py-3 "  type="password" name="password" id="" placeholder="Password">
    <span class="text-zinc-500">Already have an account ? <a class="text-blue-500" href="/login">SignIn Now</a></span>
    <input class="rounded-full bg-blue-600 py-2 px-5" type="submit" value="Register My Account">

</form>

</div>
